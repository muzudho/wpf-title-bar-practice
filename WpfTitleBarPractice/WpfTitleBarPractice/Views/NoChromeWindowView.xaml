<!--
    クローム無しウィンドウ
    ======================
    
    クライアント領域だけのウィンドウになります
    WindowStyle="None" を追加しました
-->
<Window x:Class="WpfTitleBarPractice.Views.NoChromeWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTitleBarPractice.Views"
        mc:Ignorable="d"
        Title="Window 2 - No Chrome" Width="600" Height="400"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
            クローム（Chrome）の無いウィンドウです。<LineBreak/>
            クロームというのは、ウィンドウのタイトルバーや、枠の部分のことです。<LineBreak/>
            クロームはありませんが、ウィンドウの端をマウスでドラッグして、ウィンドウをリサイズすることはできます
        </TextBlock>
        
        <Button Grid.Row="1" Width="200" Height="30" Content="閉じる" Click="CloseButton_Click"/>
    </Grid>
</Window>
